from random import randint
from time import sleep

números = list()
sorteio = list()


def sorteio(lista):
    print('Sortenado 5 valores da lista ', end='')
    for cont in range(0,5):
        n = randint(1, 100)
        lista.append(n)
        print(f'{n} ', end='', flush=True)
        sleep(0.5)
    print('Pronto!')


def somaPar(lista):
    soma = 0
    for valor in lista:
        if valor % 2 == 0:
            soma += valor
    print(f' Somando os valores pares de {lista}, temos  {soma}')


números = list()
sorteio(números)
somaPar(números)