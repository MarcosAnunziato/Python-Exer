soma = 0
s = 0
maior = 0
menor = 0

for p in range(1,5):
    print('------{}ª PESSOA------'.format(p))
    nome = str(input('Digite o nome da {}ª pessoa: '.format(p)))
    idade = int(input('Digite a idade da {}ª pessoa: '.format(p)))
    sexo = str(input('Sexo [M/F]: '))
    soma += idade
    if idade < 20 and sexo in 'Ff':
        s += 1

    elif idade == 1 and sexo in 'Mm':
        maior = idade
        nomevelho = nome
    else:
        if idade > maior:
            maior = idade
            nomevelho = nome


media = soma / 4
print('Média de idade do grupo é de {}'.format(media))
print('O grupo tem {} mulheres com menos de 20 anos'.format(s))
print('A idade do homem mais velho é de {} e seu nome é {}'. format(maior, nomevelho))


